pkgname=audiotag-thumbnailer
pkgver=0.1
pkgrel=14
pkgdesc="A nautilus thumbnailer for MP3 and OGG files"
url=""
license=("custom:WTFPL")
arch=('i686' 'x86_64')
depends=('mutagen')
source=(
	"$pkgname"
	"audio.thumbnailer"
)
sha256sums=(
	'f58b15d8702b1fc0a91fe8e4949df7d23f85290b41c0004c490102b3593e339e'
 	'20ec2cbacfdc147d1601a23003e6977f273e6c8064468327a3c887c11de78a8d'
 )

package () {
  	install -Dm 644 "audio.thumbnailer" "$pkgdir/usr/share/thumbnailers/audio.thumbnailer"
	install -Dm 755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
